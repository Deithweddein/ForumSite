<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= discussion.Main %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container justify-content-center mr-2">
    <h1><%= discussion.Main %></h1>
    <div class="container bg-secondary text-light p-4">
      <p><%= discussion.Discuss %></p>
    </div>
    <% if (discussion.replies && discussion.replies.length > 0) { %>
      <div class="replies">
        <% discussion.replies.forEach(reply => { %>
          <div class="reply bg-light p-2 my-2">
            <p><%= reply.text %></p>
            <% if(reply.user) { %>
              <small>By: <%= reply.user.name %></small>
            <% } else { %>
              <small>By: Deleted User</small>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } %>
    <form action="/<%= discussion.Main %>/reply" method="post">
      <textarea name="replyText" required></textarea><br>
      <button type="submit" class="form-control-sm">Reply</button>
    </form>
    <a href="http://localhost:3000/" class="navbar-brand">Go back home</a>
  </div>
</body>
</html>
